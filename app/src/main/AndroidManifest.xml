<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:usesCleartextTraffic="true"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.CommBidApp"
        tools:targetApi="31">
        <activity
            android:name=".WallActivity"
            android:exported="false"
            android:label="@string/title_activity_wall"
            android:theme="@style/Theme.CommBidApp" />
        <activity
            android:name=".CommissionActivity"
            android:exported="false"
            android:label="@string/title_activity_commission"
            android:theme="@style/Theme.CommBidApp" />
        <activity
            android:name=".SomeoneProfileActivity"
            android:exported="false"
            android:label="@string/title_activity_someone_profile"
            android:theme="@style/Theme.CommBidApp" />
        <activity
            android:name=".UserProfileActivity"
            android:exported="false"
            android:label="@string/title_activity_user_profile"
            android:theme="@style/Theme.CommBidApp" />
        <activity
            android:name=".RegisterActivity"
            android:exported="false"
            android:label="@string/title_activity_register"
            android:theme="@style/Theme.CommBidApp" />
        <activity
            android:name=".LoginActivity"
            android:exported="false"
            android:label="@string/title_activity_login"
            android:theme="@style/Theme.CommBidApp" />
        <activity
            android:name=".SplashActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/Theme.CommBidApp">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>